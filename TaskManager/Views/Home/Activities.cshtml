@model PageList<Activities>
<partial name="_Activities" model="Model"></partial>

<div aria-label="Page navigation">
    <ul class="pagination">

        @if (Model.HasPrevious)
        {
            <li class="page-item"><a class="page-link" asp-controller="Home" asp-action="activities" asp-route-pageIndex="@(Model.PageIndex - 1)"><i class="bi bi-chevron-left"></i></a></li>
        }
        @for (int i = 0; i < Model.TotalPages; i++)
        {
            string active = (i + 1) == Model.PageIndex ? "active" : "";
            int index = i + 1;
            <li class="page-item @active"><a class="page-link" asp-controller="Home" asp-action="activities" asp-route-pageIndex="@index">@index</a></li>

        }



        @if (Model.HasNext)
        {
            <li class="page-item"><a class="page-link" asp-controller="Home" asp-action="activities" asp-route-pageIndex="@(Model.PageIndex + 1)"><i class="bi bi-chevron-right"></i></a></li>

        }
    </ul>
</div>