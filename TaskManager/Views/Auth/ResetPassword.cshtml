@model ResetPasswordForm
@{
    Layout = "_AuthLayout";
}

<div class="card-header border-0 p-0 text-center mb-2">
    <partial name="_Logo" />
    <h3>reset password</h3>
    <p class="fs-14 text-dark my-4">Please fill the below fields to reset <a class="text-primary">@Model.Email</a>  Password</p>
</div>

<div class="card-body p-0">
    <form class="form-horizontal" method="POST" asp-controller="Auth" asp-action="ResetPassword" id="form">
        <input asp-for="SecretKey" type="hidden" />
        <input asp-for="Email" type="hidden" />

        <div class="row align-items-center justify-content-between">


        <div class="row align-items-center justify-content-between">

            <div class="form-group col-sm-6">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group col-sm-6">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

        </div>
            <button id="resetpassword" type="submit" class="btn btn-primary w-100 text-uppercase text-white rounded-2 lh-34 ff-heading fw-bold shadow m-0 mt-5 ">Reset Password</button>

    </form>
</div>




<script>


    $("#resetpassword").click(function () {
        $("#form").validate()
        if ($("#form").valid()) {
            $("#resetpassword").attr('disabled', 'disabled')
            $("#form").submit()
        }

    })
</script>